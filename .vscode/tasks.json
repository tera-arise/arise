{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent",
        "revealProblems": "onProblem",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "-clp:NoSummary"
      ],
      "runOptions": {
        "instanceLimit": 1
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean",
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent",
        "revealProblems": "onProblem",
        "showReuseMessage": false,
        "clear": true
      },
      "type": "process",
      "command": "dotnet",
      "args": [
        "clean",
        "-clp:NoSummary"
      ],
      "runOptions": {
        "instanceLimit": 1
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
