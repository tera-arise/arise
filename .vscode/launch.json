{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET: Launch Daemon (External)",
      "presentation": {
        "group": "arise"
      },
      "type": "coreclr",
      "request": "launch",
      "stopAtEntry": true,
      "suppressJITOptimizations": true,
      "justMyCode": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true
      },
      "console": "externalTerminal",
      "cwd": "${workspaceFolder}/src/server/daemon",
      "program": "${workspaceFolder}/out/bin/src/server/daemon/debug/arised.dll"
    },
    {
      "name": ".NET: Launch Daemon (Integrated)",
      "presentation": {
        "group": "arise"
      },
      "type": "coreclr",
      "request": "launch",
      "stopAtEntry": true,
      "suppressJITOptimizations": true,
      "justMyCode": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/server/daemon",
      "program": "${workspaceFolder}/out/bin/src/server/daemon/debug/arised.dll"
    },
    {
      "name": ".NET: Launch Client",
      "presentation": {
        "group": "arise"
      },
      "type": "coreclr",
      "request": "launch",
      "stopAtEntry": true,
      "suppressJITOptimizations": true,
      "justMyCode": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true
      },
      "console": "internalConsole",
      "cwd": "${workspaceFolder}/src/client",
      "program": "${workspaceFolder}/out/bin/src/client/debug/arise.dll",
      "args": [
        "--Launcher:GameConsole",
        "true"
      ]
    },
    {
      "name": ".NET: Attach",
      "presentation": {
        "group": "arise"
      },
      "type": "coreclr",
      "request": "attach",
      "suppressJITOptimizations": true,
      "justMyCode": false,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true
      },
      "processId": "${command:pickProcess}"
    }
  ]
}
