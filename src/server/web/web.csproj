<Project Sdk="Microsoft.NET.Sdk.Razor">
    <PropertyGroup>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
        <AssemblyName>Arise.Server.Web</AssemblyName>
        <RootNamespace>Arise.Server.Web</RootNamespace>
        <StaticWebAssetBasePath>/</StaticWebAssetBasePath>
    </PropertyGroup>

    <ItemGroup>
        <Using Include="Arise.Server.Storage.Documents" />
        <Using Include="EmailValidation" />
        <Using Include="Markdig" />
        <Using Include="Markdig.Extensions.AutoIdentifiers" />
        <Using Include="Markdig.Extensions.Yaml" />
        <Using Include="Markdig.Syntax" />
        <Using Include="Marten" />
        <Using Include="Marten.Exceptions" />
        <Using Include="Microsoft.AspNetCore.Authentication" />
        <Using Include="Microsoft.AspNetCore.Authorization" />
        <Using Include="Microsoft.AspNetCore.Builder" />
        <Using Include="Microsoft.AspNetCore.Diagnostics" />
        <Using Include="Microsoft.AspNetCore.Hosting" />
        <Using Include="Microsoft.AspNetCore.Html" />
        <Using Include="Microsoft.AspNetCore.Http" />
        <Using Include="Microsoft.AspNetCore.Mvc" />
        <Using Include="Microsoft.AspNetCore.Mvc.ModelBinding" />
        <Using Include="Microsoft.AspNetCore.Mvc.ModelBinding.Metadata" />
        <Using Include="Microsoft.AspNetCore.Mvc.RazorPages" />
        <Using Include="Microsoft.AspNetCore.ResponseCompression" />
        <Using Include="Microsoft.AspNetCore.Server.Kestrel.Core" />
        <Using Include="Microsoft.AspNetCore.WebUtilities" />
        <Using Include="SendGrid" />
        <Using Include="SendGrid.Helpers.Errors.Model" />
        <Using Include="SendGrid.Helpers.Mail" />
        <Using Include="YamlDotNet.RepresentationModel" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="../../../arise.ico; ../../../arise.png"
                 Link="wwwroot/%(Filename)%(Extension)" />
        <Content Include="articles/**"
                 CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../storage/storage.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="EmailValidation" />
        <PackageReference Include="Markdig" />
        <PackageReference Include="Marten.AspNetCore" />
        <PackageReference Include="SendGrid" />
        <PackageReference Include="YamlDotNet" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <Target Name="_GetDataCenterAttributes"
            BeforeTargets="GetAssemblyAttributes"
            DependsOnTargets="GetDataCenterParameters">
        <ItemGroup>
            <AssemblyMetadata Include="DataCenterRevision"
                              Value="$(DataCenterRevision)" />
        </ItemGroup>
    </Target>
</Project>
