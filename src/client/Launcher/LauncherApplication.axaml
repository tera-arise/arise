<Application x:Class="Arise.Client.Launcher.LauncherApplication"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Arise.Client.Launcher.Controls"
             xmlns:icons="using:Material.Icons.Avalonia"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        <icons:MaterialIconStyles />
        <StyleInclude Source="/Launcher/Resources/Window.axaml" />
        <StyleInclude Source="/Launcher/Resources/CheckBox.axaml" />
        <StyleInclude Source="/Launcher/Resources/TextBox.axaml" />
        <StyleInclude Source="/Launcher/Resources/AcrylicBorder.axaml" />
        <StyleInclude Source="/Launcher/Resources/Button.axaml" />
        <StyleInclude Source="/Launcher/Resources/TabControl.axaml" />
        <StyleInclude Source="/Launcher/Resources/ToggleButton.axaml" />
        <StyleInclude Source="/Launcher/Resources/StepControl.axaml" />
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Launcher/Resources/Colors.axaml" />
            </ResourceDictionary.MergedDictionaries>
             <FontFamily x:Key="Quicksand">../../Fonts#Quicksand</FontFamily> 
            <controls:EqualityConverter x:Key="equals" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
