<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controllers="using:Arise.Client.Launcher.Controllers"
        x:DataType="controllers:LauncherController">

    <Style Selector="Button.main">
        <Setter Property="Background" Value="{DynamicResource MainBrush}"/>
    </Style>
    <Style Selector="Button.main:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource MainBrushHilight}"/>
    </Style>
</Styles>
